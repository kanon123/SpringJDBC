<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="db.properties" />
	
    <typeAliases>
		<package name="cn.sau.edu.kanon.mybatis.entities"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}"/>
				<property name="username" value="${name}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="cn/sau/edu/kanon/mybatis/entities/userMapper.xml"/>
		<mapper resource="cn/sau/edu/kanon/mybatis/entities/OrderMapper.xml"/>
		<mapper resource="cn/sau/edu/kanon/mybatis/entities/ClassMapper.xml"/>
		<mapper resource="cn/sau/edu/kanon/mybatis/entities/ClassMapper2.xml"/>
		<mapper resource="cn/sau/edu/kanon/mybatis/entities/ConditionUserMapper.xml"/>
		<mapper class="cn.sau.edu.kanon.mybatis.entities.UserMapperTest" />
	</mappers>
</configuration>
